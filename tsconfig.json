{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "baseUrl": "source",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["source/**/*"],
  "exclude": [
    "http/**/*", 
    "template/**/*"
  ]
}
