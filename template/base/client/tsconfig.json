{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": false,
    "outDir": "../.compiled",
    "rootDir": "../",
    "baseUrl": "..",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "client/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": [
    "*.ts",
    "../site/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
